#!/bin/bash
export XDG_CONFIG_HOME="$HOME"/.config
mkdir -p "$XDG_CONFIG_HOME"
echo "setup script started!"

dotfiles=(
nvim
test1
test2
)

for package in "${dotfiles[@]}";
do
  if [ ! -d "$XDG_CONFIG_HOME"/"$package"]
    echo "found $package..."
    cp $package "$XDG_CONFIG_HOME"/"$package"
  else
    echo "$package already has a dotfile directory"
  fi
done

return 0
